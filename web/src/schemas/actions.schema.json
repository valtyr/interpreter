        {
          "additionalProperties": false,
          "properties": {
            "payload": {
              "additionalProperties": false,
              "properties": {
                "gameState": {
                  "$ref": "#/definitions/GameState"
                }
              },
              "required": [
                "gameState"
              ],
              "type": "object"
            },
            "type": {
              "const": "GAME_UPDATED",
              "type": "string"
            }
          },
          "required": [
            "type",
            "payload"
          ],
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "payload": {
              "type": "string"
            },
            "type": {
              "const": "ADD_WORD",
              "type": "string"
            }
          },
          "required": [
            "type",
            "payload"
          ],
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "payload": {
              "additionalProperties": false,
              "properties": {
                "id": {
                  "type": "number"
