            "type": {
              "const": "SET_USERNAME",
              "type": "string"
            }
          },
          "required": [
            "type",
            "payload"
          ],
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "payload": {
              "additionalProperties": false,
              "properties": {
                "player": {
                  "$ref": "#/definitions/Player"
                },
                "username": {
                  "type": "string"
                }
              },
              "required": [
                "username",
                "player"
              ],
              "type": "object"
            },
            "type": {
              "const": "USERNAME_SET",
              "type": "string"
            }
          },
          "required": [
            "type",
            "payload"
          ],
          "type": "object"
        }
      ]
    }
