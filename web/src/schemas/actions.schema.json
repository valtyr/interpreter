    "GameState": {
      "additionalProperties": false,
      "properties": {
        "cardGroup": {
          "$ref": "#/definitions/CardGroup"
        },
        "creator": {
          "$ref": "#/definitions/Player"
        },
        "currentCard": {
          "$ref": "#/definitions/Card"
        },
        "currentPlayer": {
          "anyOf": [
            {
              "$ref": "#/definitions/Player"
            },
            {
              "type": "null"
            }
          ]
        },
        "id": {
          "type": "number"
        },
        "players": {
          "items": {
            "$ref": "#/definitions/Player"
          },
          "type": "array"
        },
        "shareId": {
          "type": "string"
        },
        "winner": {
          "anyOf": [
            {
              "$ref": "#/definitions/Player"
            },
            {
              "type": "null"
            }
          ]
        }
