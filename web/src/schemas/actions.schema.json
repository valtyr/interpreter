{
  "$ref": "#/definitions/Actions",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Actions": {
      "anyOf": [
        {
          "$ref": "#/definitions/CardGroupActions"
        },
        {
          "$ref": "#/definitions/DebugActions"
        },
        {
          "$ref": "#/definitions/UserActions"
        },
        {
          "$ref": "#/definitions/GameActions"
        },
        {
          "$ref": "#/definitions/ErrorActions"
        }
      ]
    },
    "Card": {
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "number"
        },
        "word": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "word"
      ],
      "type": "object"
    },
    "CardGroup": {
      "additionalProperties": false,
      "properties": {
        "cards": {
          "items": {
            "$ref": "#/definitions/Card"
          },
          "type": "array"
        },
        "creationDate": {
          "format": "date-time",
          "type": "string"
        },
        "creator": {
          "$ref": "#/definitions/User"
        },
        "id": {
          "type": "number"
        },
        "name": {
          "type": "string"
        },
        "rating": {
          "type": "number"
        },
        "tags": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "timesUsed": {
          "type": "number"
        }
      },
      "required": [
        "id",
        "name",
        "cards",
        "creator",
        "creationDate",
        "timesUsed",
        "tags",
        "rating"
      ],
      "type": "object"
    },
    "CardGroupActions": {
      "anyOf": [
        {
          "additionalProperties": false,
          "properties": {
            "type": {
              "const": "FETCH_CARD_GROUPS",
              "type": "string"
            }
          },
          "required": [
            "type"
          ],
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "payload": {
              "items": {
                "$ref": "#/definitions/CardGroup"
