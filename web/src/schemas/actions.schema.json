          "required": [
            "type"
          ],
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "type": {
              "const": "PONG",
              "type": "string"
            }
          },
          "required": [
            "type"
          ],
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "type": {
              "const": "CONNECT",
              "type": "string"
            }
          },
          "required": [
            "type"
          ],
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "type": {
              "const": "CONNECTED",
              "type": "string"
            }
          },
          "required": [
            "type"
          ],
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "type": {
              "const": "DISCONNECTED",
              "type": "string"
            }
          },
          "required": [
            "type"
          ],
          "type": "object"
        }
      ]
    },
    "ErrorActions": {
      "additionalProperties": false,
      "properties": {
        "payload": {
          "additionalProperties": false,
          "properties": {
            "message": {
              "type": "string"
            },
            "title": {
              "type": "string"
            }
          },
          "required": [
            "title",
            "message"
          ],
          "type": "object"
        },
        "type": {
          "const": "ERROR_RECEIVED",
          "type": "string"
        }
      },
      "required": [
        "type",
        "payload"
      ],
      "type": "object"
    },
    "GameActions": {
      "anyOf": [
        {
          "additionalProperties": false,
          "properties": {
            "payload": {
              "type": "string"
