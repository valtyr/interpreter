        {
          "additionalProperties": false,
          "properties": {
            "type": {
              "const": "CREATE_CARD_GROUP",
              "type": "string"
            }
          },
          "required": [
            "type"
          ],
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "payload": {
              "$ref": "#/definitions/CardGroup"
            },
            "type": {
              "const": "CARD_GROUP_CREATED",
              "type": "string"
            }
          },
          "required": [
            "type",
            "payload"
          ],
          "type": "object"
        }
      ]
    },
    "DebugActions": {
      "anyOf": [
        {
          "additionalProperties": false,
          "properties": {
            "type": {
              "const": "PING",
